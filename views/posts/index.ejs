<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body>
    <header>
        <% include ../partials/header %>
    </header>
    <div class="posts">
        <% include partials/top %>
    <!-- main start -->

    <!-- views/posts/index.ejs -->
        <div class="index">
            <a href="/posts/new"><button>New</button></a>
            <% if(user) {%>
              <a href="/logout" class="float_right"><button>Logout</button></a>
              <a href="/users/<%= user._id %>" class="float_right"><button>My Profile (<%= user.nickname %>)</button></a>
            <% } else { %>
                <a href="/login" class="float_right"><button>Login</button></a>
                <a href="/users/new" class="float_right"><button>Sign Up</button></a>
            <% } %>
            <div id="postDiv">
              <p class="header"> Title <span>Date</span><span>Author</span></p>
              <% posts.forEach(function(post){ %>
                <li id="grid">
                    <div>
                      <a href="/posts/<%= post._id %>"><%= post.title %></a>
                    </div>
                    <div><%= post.author.nickname %></div>
                    <div><%= post.createdAt.toLocaleDateString() %></div>
                </li>
              <% }) %>
            </div>
        </div>
        
    <!-- main end -->
    </div><!-- posts end -->
    <footer>
        <% include ../partials/footer %>
    </footer>
</body>
</html>